#!/usr/bin/env sh
# . "$(dirname -- "$0")/_/husky.sh"

echo "=== Running commit-msg hook ==="
echo "Commit message file: $1"
echo "-----------------------------"

# 1. Run Commitlint
echo "â³ Running commitlint validation..."
npx --no -- commitlint --edit "$1"
echo "âœ… Commitlint validation passed"
echo "-----------------------------"

# 2. Prepare commit message for spell check
echo "ğŸ“‹ Extracting commit message subject line..."
MSG_HEAD=$(head -n 1 "$1")
echo "Commit message subject: '$MSG_HEAD'"

# 3. Run spell check if message exists
if [ -n "$MSG_HEAD" ]; then
  echo "ğŸ” Running spell check on commit message..."
  echo "$MSG_HEAD" | npx cspell --no-summary --no-progress --language-id commit-msg stdin
  echo "âœ… Spell check completed"
else
  echo "âš ï¸  Empty commit message - skipping spell check"
fi

echo "-----------------------------"
echo "ğŸ‰ Commit-msg hook completed successfully"
